<% if flash[:error].present? %>
  <P>エラーがあります</P>
  <ul class="errors">
    <% flash[:error].each do |e| %>
      <li><%= e %></li>
    <% end %>
  </ul>
<% end %>
<% @page_title = "会員の詳細" %>
<h1><%= @page_title %></h1>
<h2><%= @friend.full_name %></h2>
<% if @telephones.present? %>
  <ul>
    <% @telephones.each do |tel| %>
      <li>
        <%= tel.number %>
        <% if tel.cellphone %>
          <%= image_tag "cell.png", size: "20x40", alt: "telephone" %>
        <% end %>
        <div class="show">
        </div>
        <%= button_to "削除", telephone_path(tel.id, friend: @friend_id), { method: :delete, class: "teledele", data: { confirm: "本当に削除しますか?" } } %>
      </li>
    <% end %>
  </ul>
  <%= paginate @telephones %>

<% else %>
  <p>記事がありません。</p>

<% end %>

<%= form_for @telephone do |form| %>

  <table class="attr">
    <tr>
      <th><%= form.label :number, "電話番号" %></th>
      <td><%= form.text_field :number %></td>
      <td>携帯電話<%= form.check_box :cellphone, {}, "true", "false" %></td>
      <%= hidden_field_tag :author, @friend_id %>
    </tr>
  </table>

  <div><%= form.submit :save ,class: "sub" %></div>
<% end %>

<%= menu_link_to "TOP", :root %>